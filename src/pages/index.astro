---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import portraitImage from '../assets/cvPhotoBlurCirc400px.png';
import linkedInImage from '../assets/linkedIn.png';
import githubImage from '../assets/github.png';
import twitterImage from '../assets/twitter.png';
import mail from '../assets/mail.svg';
---

<Layout title="Jon Lunde, software developer!">
  <main>
    <div class="flex flex-col">
      <div class="flex items-center justify-between w-full">
        <div class="flex flex-col gap-10">
          <h1>
            Hey, my name is
            <span class="text-gradient">Jon!</span>
          </h1>
          <h2>
            I'm a web developer currently living in Oslo, Norway.
            <br />
            I work for Buypass where I develop iSonen.no the platform for hosting
            and attending sport events in Norway.
            <br /><br />
            I specialice in <span class="text-[#149eca] font-semibold"
              >React</span
            >,
            <span class="text-[#3178C6] font-semibold">Typescript</span>, <span
              class="text-[#fff] font-semibold">NextJS</span
            >
            and <span class="text-[#F6009B] font-semibold">GraphQL</span>
          </h2>
        </div>
        <Image src={portraitImage} alt="A picture of me! Jon!" />
      </div>
      <div class="flex gap-8 mt-10">
        <a
          id="linkedin"
          href="https://www.linkedin.com/in/jon-lunde/"
          target="_blank"
          rel="noopener noreferrer"
          class="hover:scale-105"
        >
          <Image
            src={linkedInImage}
            alt="LinkedIn logo"
            width={70}
            height={70}
          />
          <a
            id="github"
            href="https://github.com/JonLunde"
            target="_blank"
            rel="noopener noreferrer"
            class="hover:scale-105"
          >
            <Image src={githubImage} alt="Github logo" width={70} height={70} />
          </a>
          <a
            id="twitter"
            href="https://twitter.com/JonLunde_"
            target="_blank"
            rel="noopener noreferrer"
          >
            <Image
              src={twitterImage}
              alt="Twitter logo"
              width={70}
              height={70}
              class="hover:scale-105"
            />
          </a>
          <a
            id="mail"
            href="mailto:jon@lunde.dev"
            target="_blank"
            rel="noopener noreferrer"
            class="bg-white rounded-lg w-[70px] h-[70px] flex items-center justify-center hover:scale-105"
          >
            <Image src={mail} alt="Email logo" width={56} height={56} />
          </a>
        </a>
      </div>
    </div>
  </main>

  <style>
    .text-gradient {
      background-image: linear-gradient(
        45deg,
        rgb(169, 51, 0),
        rgb(255, 167, 79) 30%,
        white 60%
      );
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-size: 400%;
      background-position: 0%;
    }
  </style>
</Layout>
